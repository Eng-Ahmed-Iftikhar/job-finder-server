generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id              String    @id @default(cuid())
  password        String?   // Made optional for social login users
  isActive        Boolean   @default(true)
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  deletedAt       DateTime?

  // Relations
  verificationCodes VerificationCode[]
  profile         Profile?
  emailId         String? @unique
  email           Email?    @relation(fields: [emailId], references: [id], onDelete: SetNull)
  companyProfiles CompanyProfile[]
  sentConnectionRequests ConnectionRequest[] @relation("SenderRequests")
  receivedConnectionRequests ConnectionRequest[] @relation("ReceiverRequests")
  employeeConnections Connection[] @relation("EmployeeConnections")
  employerConnections Connection[] @relation("EmployerConnections")
  companyFollowers CompanyFollower[]
  employerJobs    JobEmployer[]
  employeeJobs    JobEmployee[]
  savedJobs       SavedJob[]

  @@map("users")
}

// Email addresses associated with a user
model Email {
  id        String   @id @default(cuid())
  email     String   @unique
  isVerified Boolean  @default(false)
  // Social login fields
  provider  SocialProvider?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  // Relations
  user User?
  @@map("emails")
}

// Verification codes table
model VerificationCode {
  id        String              @id @default(cuid())
  userId    String
  code      String
  type      VerificationCodeType
  expiresAt DateTime
  isUsed    Boolean             @default(false)
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt
  deletedAt DateTime?

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("verification_codes")
}

// Profile model for user details
model Profile {
  id              String   @id @default(cuid())
  userId          String   @unique
  firstName       String?
  lastName        String?
  isOnboarded     Boolean  @default(false)
  role            UserRole @default(EMPLOYEE)
  locationId      String?
  address         String?
  pictureUrl      String?
  bio             String? // profile bio
  resumeUrl       String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  deletedAt       DateTime?

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  phoneNumbers UserPhoneNumber[]
  experiences Experience[]
  educations Education[]
  profileSkills ProfileSkill[]
  notificationSettings NotificationSetting?
  location    Location? @relation(fields: [locationId], references: [id], onDelete: SetNull)

  @@map("profiles")
}

// Experience model
model Experience {
  id          String   @id @default(cuid())
  profileId   String
  position    String
  company     String
  startDate   DateTime
  endDate     DateTime?
  isCurrent   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?

  // Relations
  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("experiences")
}

// Education model
model Education {
  id            String   @id @default(cuid())
  profileId     String
  school        String
  degree        String
  fieldOfStudy  String?
  yearStarted   Int
  yearGraduated Int?
  inProgress    Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  deletedAt     DateTime?

  // Relations
  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("educations")
}

// Skill model (now independent)
model Skill {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  // Relations
  profileSkills ProfileSkill[]

  @@map("skills")
}

// Profile-Skill join table (many-to-many)
model ProfileSkill {
  id        String   @id @default(cuid())
  profileId String
  skillId   String
  createdAt DateTime @default(now())
  deletedAt DateTime?

  // Relations
  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  skill   Skill   @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@unique([profileId, skillId])
  @@map("profile_skills")
}

// Phone numbers directory (no direct link to Profile)
model PhoneNumber {
  id          String   @id @default(cuid())
  countryCode String
  number      String
  isVerified  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?

  // Relations
  userPhoneNumbers UserPhoneNumber[]

  @@map("phone_numbers")
}

// Join table linking Profile to PhoneNumber
model UserPhoneNumber {
  id            String      @id @default(cuid())
  profileId     String
  phoneNumberId String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  deletedAt     DateTime?

  // Relations
  profile     Profile     @relation(fields: [profileId], references: [id], onDelete: Cascade)
  phoneNumber PhoneNumber @relation(fields: [phoneNumberId], references: [id], onDelete: Cascade)

  @@unique([profileId, phoneNumberId])
  @@map("user_phone_numbers")
}

// Location directory
model Location {
  id        String          @id @default(cuid())
  city      String?
  state     String?
  country   String?
  status    LocationStatus  @default(ENABLE)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  deletedAt DateTime?

  // Relations
  profiles Profile[]
  companyProfiles CompanyProfile[]
  jobs Job[]

  @@map("locations")
}

// Company directory
model Company {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  // Relations
  profile CompanyProfile?
  followers CompanyFollower[]

  @@map("companies")
}

// Company followers (user follows company)
model CompanyFollower {
  id         String   @id @default(cuid())
  companyId  String
  followerId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  deletedAt  DateTime?

  company  Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  follower User    @relation(fields: [followerId], references: [id], onDelete: Cascade)

  @@unique([companyId, followerId])
  @@map("company_followers")
}

// Company profile model
model CompanyProfile {
  id         String   @id @default(cuid())
  employerId String
  companyId  String   @unique
  locationId String?
  address    String?
  status     CompanyStatus @default(ENABLE)
  websiteId  String?
  pictureUrl String?
  about      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  deletedAt  DateTime?

  // Relations
  employer User     @relation(fields: [employerId], references: [id], onDelete: Cascade)
  company  Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  location Location? @relation(fields: [locationId], references: [id], onDelete: SetNull)
  website  Website?  @relation(fields: [websiteId], references: [id], onDelete: SetNull)

  @@map("company_profiles")
}

// Website directory
model Website {
  id        String   @id @default(cuid())
  url       String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  // Relations
  companyProfiles CompanyProfile[]

  @@map("websites")
}

// Job directory
model Job {
  id          String     @id @default(cuid())
  name        String
  address     String?
  locationId  String?
  description String?
  jobType     JobType?
  wage        Decimal?
  wageRate    WageRate?
  currency    String?
  hiringStatus HiringStatus @default(NORMAL)
  status      JobStatus  @default(DRAFT)
  publishAt   DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  deletedAt   DateTime?

  // Relations
  location     Location?     @relation(fields: [locationId], references: [id], onDelete: SetNull)
  employers    JobEmployer[]
  employees    JobEmployee[]
  savedBy      SavedJob[]

  @@map("jobs")
}

// Saved jobs (employee bookmarks a job)
model SavedJob {
  id          String   @id @default(cuid())
  jobId       String
  employeeId  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?

  // Relations
  job      Job  @relation(fields: [jobId], references: [id], onDelete: Cascade)
  employee User @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([jobId, employeeId])
  @@map("saved_jobs")
}

// Join table linking Job to Employer (User)
model JobEmployer {
  id         String   @id @default(cuid())
  jobId      String
  employerId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  deletedAt  DateTime?

  // Relations
  job      Job  @relation(fields: [jobId], references: [id], onDelete: Cascade)
  employer User @relation(fields: [employerId], references: [id], onDelete: Cascade)

  @@unique([jobId, employerId])
  @@map("job_employers")
}

// Join table linking Job to Employee (User)
model JobEmployee {
  id          String              @id @default(cuid())
  jobId       String
  employeeId  String
  status      JobEmployeeStatus   @default(APPLIED)
  hiredAt     DateTime?
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  deletedAt   DateTime?

  // Relations
  job      Job  @relation(fields: [jobId], references: [id], onDelete: Cascade)
  employee User @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([jobId, employeeId])
  @@map("job_employees")
}

// Notification settings for user preferences
model NotificationSetting {
  id                                      String   @id @default(cuid())
  profileId                               String   @unique
  
  // Interview notifications
  jobInterviewScheduledSystem              Boolean  @default(true)
  jobInterviewScheduledEmail               Boolean  @default(true)
  
  // Connection request notifications
  connectionRequestSystem                  Boolean  @default(true)
  connectionRequestEmail                   Boolean  @default(true)
  
  // Job opening notifications
  newJobOpeningSystem                      Boolean  @default(true)
  newJobOpeningEmail                       Boolean  @default(true)
  
  // Interview reminder notifications
  interviewReminderSystem                  Boolean  @default(false)
  interviewReminderEmail                   Boolean  @default(true)
  
  createdAt                                DateTime @default(now())
  updatedAt                                DateTime @updatedAt
  deletedAt                                DateTime?

  // Relations
  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("notification_settings")
}

// Connection table between employee and employer
model Connection {
  id         String   @id @default(cuid())
  employeeId String
  employerId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  deletedAt  DateTime?

  employee User @relation("EmployeeConnections", fields: [employeeId], references: [id], onDelete: Cascade)
  employer User @relation("EmployerConnections", fields: [employerId], references: [id], onDelete: Cascade)

  @@unique([employeeId, employerId])
  @@map("connections")
}

// Connection requests
model ConnectionRequest {
  id         String   @id @default(cuid())
  senderId   String
  receiverId String
  status     ConnectionRequestStatus @default(PENDING)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  deletedAt  DateTime?

  sender   User @relation("SenderRequests", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User @relation("ReceiverRequests", fields: [receiverId], references: [id], onDelete: Cascade)

  @@map("connection_requests")
}

enum UserRole {
  OWNER
  EMPLOYER
  EMPLOYEE
}

enum VerificationCodeType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
  PHONE_VERIFICATION
}

enum SocialProvider {
  EMAIL
  GOOGLE
  FACEBOOK
  LINKEDIN
  GITHUB
}

enum LocationStatus {
  ENABLE
  DISABLE
}

enum CompanyStatus {
  ENABLE
  DISABLE
}

enum ConnectionRequestStatus {
  PENDING
  ACCEPTED
  REJECTED
  CANCELLED
}

enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
}

enum WageRate {
  HOUR
  WEEKLY
  MONTH
  YEAR
}

enum JobStatus {
  DRAFT
  PUBLISHED
  COMPLETED
  CLOSED
}

enum HiringStatus {
  URGENT
  NORMAL
}

enum JobEmployeeStatus {
  APPLIED
  HIRED
  REJECTED
  CANCELLED
}
