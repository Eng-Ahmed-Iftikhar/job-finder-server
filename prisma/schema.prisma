generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id              String    @id @default(cuid())
  password        String?
  isActive        Boolean   @default(true) @map("is_active")
  
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  deletedAt       DateTime? @map("deleted_at")

  // Relations
  verificationCodes VerificationCode[] @relation("UserVerificationCodes")
  profile         Profile?
  emailId         String? @unique @map("email_id")
  email           Email?    @relation(fields: [emailId], references: [id], onDelete: SetNull)
  companyProfiles CompanyProfile[]
  sentConnectionRequests ConnectionRequest[] @relation("SenderRequests")
  receivedConnectionRequests ConnectionRequest[] @relation("ReceiverRequests")
  companyFollowers CompanyFollower[]
  employerJobs    JobEmployer[]
  employeeJobs    JobEmployee[]
  savedJobs       SavedJob[]
  chatUsers ChatUser[]
  sentMessages ChatMessage[] @relation("SentMessages")
  messageReactions MessageReaction[]
  messageReplies MessageReply[]
  messageUserStatuses MessageUserStatus[]
  chatBlocks ChatBlock[]
  chats        Chat[]    @relation("UserChats")

  @@map("users")
}

// Email addresses associated with a user
model Email {
  id        String   @id @default(cuid())
  email     String   @unique
  isVerified Boolean  @default(false) @map("is_verified")
  // Social login fields
  provider  SocialProvider?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  // Relations
  user User?
  @@map("emails")
}

// Verification codes table
model VerificationCode {
  id        String              @id @default(cuid())
  userId    String              @map("user_id")
  code      String
  type      VerificationCodeType
  expiresAt DateTime            @map("expires_at")
  isUsed    Boolean             @default(false) @map("is_used")
  createdAt DateTime            @default(now()) @map("created_at")
  updatedAt DateTime            @updatedAt @map("updated_at")
  deletedAt DateTime?           @map("deleted_at")

  // Relations
  user User @relation("UserVerificationCodes", fields: [userId], references: [id], onDelete: Cascade)

  @@map("verification_codes")
}

// Profile model for user details
model Profile {
  id              String   @id @default(cuid())
  userId          String   @unique @map("user_id")
  firstName       String?  @map("first_name")
  lastName        String?  @map("last_name")
  isOnboarded     Boolean  @default(false) @map("is_onboarded")
  role            UserRole @default(EMPLOYEE)
  locationId      String?  @map("location_id")
  address         String?
  pictureUrl      String?  @map("picture_url")
  bio             String?
  resumeUrl       String?  @map("resume_url")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  deletedAt       DateTime? @map("deleted_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  phoneNumbers UserPhoneNumber[]
  experiences Experience[]
  educations Education[]
  profileSkills ProfileSkill[]
  notificationSettings NotificationSetting?
  location    Location? @relation(fields: [locationId], references: [id], onDelete: SetNull)

  @@map("profiles")
}

// Experience model
model Experience {
  id          String   @id @default(cuid())
  profileId   String   @map("profile_id")
  position    String
  company     String
  startDate   DateTime @map("start_date")
  endDate     DateTime? @map("end_date")
  isCurrent   Boolean  @default(false) @map("is_current")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at")

  // Relations
  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("experiences")
}

// Education model
model Education {
  id            String   @id @default(cuid())
  profileId     String   @map("profile_id")
  school        String
  degree        String
  fieldOfStudy  String?  @map("field_of_study")
  yearStarted   Int      @map("year_started")
  yearGraduated Int?     @map("year_graduated")
  inProgress    Boolean  @default(false) @map("in_progress")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  deletedAt     DateTime? @map("deleted_at")

  // Relations
  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("educations")
}

// Skill model (now independent)
model Skill {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  // Relations
  profileSkills ProfileSkill[]

  @@map("skills")
}

// Profile-Skill join table (many-to-many)
model ProfileSkill {
  id        String   @id @default(cuid())
  profileId String   @map("profile_id")
  skillId   String   @map("skill_id")
  createdAt DateTime @default(now()) @map("created_at")
  deletedAt DateTime? @map("deleted_at")

  // Relations
  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  skill   Skill   @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@unique([profileId, skillId])
  @@map("profile_skills")
}

// Phone numbers directory (no direct link to Profile)
model PhoneNumber {
  id          String   @id @default(cuid())
  countryCode String   @map("country_code")
  number      String
  isVerified  Boolean  @default(false) @map("is_verified")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at")

  // Relations
  userPhoneNumbers UserPhoneNumber[]

  @@map("phone_numbers")
}

// Join table linking Profile to PhoneNumber
model UserPhoneNumber {
  id            String      @id @default(cuid())
  profileId     String      @map("profile_id")
  phoneNumberId String      @map("phone_number_id")
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")
  deletedAt     DateTime?   @map("deleted_at")

  // Relations
  profile     Profile     @relation(fields: [profileId], references: [id], onDelete: Cascade)
  phoneNumber PhoneNumber @relation(fields: [phoneNumberId], references: [id], onDelete: Cascade)

  @@unique([profileId, phoneNumberId])
  @@map("user_phone_numbers")
}

// Location directory
model Location {
  id        String          @id @default(cuid())
  city      String?
  state     String?
  country   String?
  status    LocationStatus  @default(ENABLE)
  createdAt DateTime        @default(now()) @map("created_at")
  updatedAt DateTime        @updatedAt @map("updated_at")
  deletedAt DateTime?       @map("deleted_at")

  // Relations
  profiles Profile[]
  companyProfiles CompanyProfile[]
  jobs Job[]

  @@map("locations")
}

// Company directory
model Company {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  // Relations
  profile CompanyProfile?
  followers CompanyFollower[]

  @@map("companies")
}

// Company followers (user follows company)
model CompanyFollower {
  id         String   @id @default(cuid())
  companyId  String   @map("company_id")
  followerId String   @map("follower_id")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
  deletedAt  DateTime? @map("deleted_at")

  company  Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  follower User    @relation(fields: [followerId], references: [id], onDelete: Cascade)

  @@unique([companyId, followerId])
  @@map("company_followers")
}

// Company profile model
model CompanyProfile {
  id         String   @id @default(cuid())
  employerId String   @map("employer_id")
  companyId  String   @unique @map("company_id")
  locationId String?  @map("location_id")
  address    String?
  status     CompanyStatus @default(ENABLE)
  websiteId  String?  @map("website_id")
  pictureUrl String?  @map("picture_url")
  about      String?
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
  deletedAt  DateTime? @map("deleted_at")

  // Relations
  employer User     @relation(fields: [employerId], references: [id], onDelete: Cascade)
  company  Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  location Location? @relation(fields: [locationId], references: [id], onDelete: SetNull)
  website  Website?  @relation(fields: [websiteId], references: [id], onDelete: SetNull)

  @@map("company_profiles")
}

// Website directory
model Website {
  id        String   @id @default(cuid())
  url       String   @unique
  name      String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  // Relations
  companyProfiles CompanyProfile[]

  @@map("websites")
}

// Job directory
model Job {
  id          String     @id @default(cuid())
  name        String
  address     String?
  locationId  String?    @map("location_id")
  description String?
  jobType     JobType?   @map("job_type")
  workMode    WorkMode?  @map("work_mode")
  wage        Decimal?
  wageRate    WageRate?  @map("wage_rate")
  currency    String?
  hiringStatus HiringStatus @default(NORMAL) @map("hiring_status")
  status      JobStatus  @default(DRAFT)
  publishAt   DateTime?  @map("publish_at")
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")
  deletedAt   DateTime?  @map("deleted_at")

  // Relations
  location     Location?     @relation(fields: [locationId], references: [id], onDelete: SetNull)
  employers    JobEmployer[]
  employees    JobEmployee[]
  savedBy      SavedJob[]

  @@map("jobs")
}

// Saved jobs (employee bookmarks a job)
model SavedJob {
  id          String   @id @default(cuid())
  jobId       String   @map("job_id")
  employeeId  String   @map("employee_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  deletedAt   DateTime? @map("deleted_at")

  // Relations
  job      Job  @relation(fields: [jobId], references: [id], onDelete: Cascade)
  employee User @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([jobId, employeeId])
  @@map("saved_jobs")
}

// Join table linking Job to Employer (User)
model JobEmployer {
  id         String   @id @default(cuid())
  jobId      String   @map("job_id")
  employerId String   @map("employer_id")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
  deletedAt  DateTime? @map("deleted_at")

  // Relations
  job      Job  @relation(fields: [jobId], references: [id], onDelete: Cascade)
  employer User @relation(fields: [employerId], references: [id], onDelete: Cascade)

  @@unique([jobId, employerId])
  @@map("job_employers")
}

// Join table linking Job to Employee (User)
model JobEmployee {
  id          String              @id @default(cuid())
  jobId       String              @map("job_id")
  employeeId  String              @map("employee_id")
  status      JobEmployeeStatus   @default(APPLIED)
  coverLetter String?             @map("cover_letter")
  hiredAt     DateTime?           @map("hired_at")
  createdAt   DateTime            @default(now()) @map("created_at")
  updatedAt   DateTime            @updatedAt @map("updated_at")
  deletedAt   DateTime?           @map("deleted_at")

  // Relations
  job      Job  @relation(fields: [jobId], references: [id], onDelete: Cascade)
  employee User @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([jobId, employeeId])
  @@map("job_employees")
}

// Notification settings for user preferences
model NotificationSetting {
  id                                      String   @id @default(cuid())
  profileId                               String   @unique @map("profile_id")
  
  // Interview notifications
  jobInterviewScheduledSystem              Boolean  @default(true) @map("job_interview_scheduled_system")
  jobInterviewScheduledEmail               Boolean  @default(true) @map("job_interview_scheduled_email")
  
  // Connection request notifications
  connectionRequestSystem                  Boolean  @default(true) @map("connection_request_system")
  connectionRequestEmail                   Boolean  @default(true) @map("connection_request_email")
  
  // Job opening notifications
  newJobOpeningSystem                      Boolean  @default(true) @map("new_job_opening_system")
  newJobOpeningEmail                       Boolean  @default(true) @map("new_job_opening_email")
  
  // Interview reminder notifications
  interviewReminderSystem                  Boolean  @default(false) @map("interview_reminder_system")
  interviewReminderEmail                   Boolean  @default(true) @map("interview_reminder_email")
  
  createdAt                                DateTime @default(now()) @map("created_at")
  updatedAt                                DateTime @updatedAt @map("updated_at")
  deletedAt                                DateTime? @map("deleted_at")

  // Relations
  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("notification_settings")
}

// Connection table between employee and employer
model Connection {
  id         String   @id @default(cuid())

  connectionRequestId String? @map("connection_request_id")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
  deletedAt  DateTime? @map("deleted_at")


  connectionRequest ConnectionRequest? @relation(fields: [connectionRequestId], references: [id], onDelete: SetNull)

  @@map("connections")
}

// Connection requests
model ConnectionRequest {
  id         String   @id @default(cuid())
  senderId   String   @map("sender_id")
  receiverId String   @map("receiver_id")
  status     ConnectionRequestStatus @default(PENDING)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
  deletedAt  DateTime? @map("deleted_at")

  sender   User @relation("SenderRequests", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User @relation("ReceiverRequests", fields: [receiverId], references: [id], onDelete: Cascade)
  connection Connection[]

  @@map("connection_requests")
}

enum UserRole {
  OWNER
  EMPLOYER
  EMPLOYEE
}

enum VerificationCodeType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
  PHONE_VERIFICATION
}

enum SocialProvider {
  EMAIL
  GOOGLE
  FACEBOOK
  LINKEDIN
  GITHUB
}

enum LocationStatus {
  ENABLE
  DISABLE
}

enum CompanyStatus {
  ENABLE
  DISABLE
}

enum ConnectionRequestStatus {
  PENDING
  ACCEPTED
  REJECTED
  CANCELLED
}

enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
}

enum WorkMode {
  ONSITE
  REMOTE
}

enum WageRate {
  HOUR
  WEEKLY
  MONTH
  YEAR
}

enum JobStatus {
  DRAFT
  PUBLISHED
  COMPLETED
  CLOSED
}

enum HiringStatus {
  URGENT
  NORMAL
}

enum JobEmployeeStatus {
  APPLIED
  HIRED
  REJECTED
  CANCELLED
}

// =====================
// Professional Chat System Tables
// =====================

model Chat {
  id        String   @id @default(uuid())
  type      ChatType
  userId    String   @map("user_id") // Creator/owner of the chat
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  // Relations
  users     ChatUser[]
  group     ChatGroup?
  messages  ChatMessage[]
  blocks    ChatBlock[]
  user      User      @relation("UserChats", fields: [userId], references: [id], onDelete: Cascade)

  @@map("chats")
}

model ChatUser {
  id        String   @id @default(uuid())
  chatId    String  @map("chat_id")
  userId    String  @map("user_id")
  role      ChatUserRole @default(MEMBER)
  joinedAt  DateTime @default(now()) @map("joined_at")
  leftAt    DateTime? @map("left_at")
  deletedAt DateTime? @map("deleted_at")
  lastReadMessageId String? @map("last_read_message_id")
  mutedUntil DateTime? @map("muted_until")

  // Relations
  chat      Chat   @relation(fields: [chatId], references: [id], onDelete: Cascade)
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  // messageStatuses relation removed because MessageUserStatus no longer references ChatUser
  lastReadMessage ChatMessage? @relation("LastReadMessage", fields: [lastReadMessageId], references: [id], onDelete: SetNull)

  @@unique([chatId, userId])
  @@map("chat_users")
}

model ChatGroup {
  id        String   @id @default(uuid())
  chatId    String  @unique @map("chat_id")
  name      String
  description String?
  iconUrl      String?
  createdAt DateTime @default(now()) @map("created_at")
  deletedAt DateTime? @map("deleted_at")

  // Relations
  chat      Chat   @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@map("chat_groups")
}

model ChatMessage {
  id          String   @id @default(uuid())
  chatId      String   @map("chat_id")
  senderId    String   @map("sender_id")
  text        String?
  fileUrl     String?  @map("file_url")
  messageType MessageType @default(TEXT) @map("message_type")
  status      MessageStatus @default(SENT)
  createdAt   DateTime @default(now()) @map("created_at")
  deletedAt   DateTime? @map("deleted_at")

  // Relations
  chat        Chat   @relation(fields: [chatId], references: [id], onDelete: Cascade)
  sender      User   @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  lastReadByUsers ChatUser[] @relation("LastReadMessage")
  userStatuses MessageUserStatus[]
  reactions   MessageReaction[]
  replies     MessageReply[] @relation("MessageReplies")
  parentReply MessageReply[] @relation("ParentMessageReply")
  @@index([chatId, createdAt])
  @@map("chat_messages")
}

model MessageReaction {
  id         String   @id @default(uuid())
  messageId  String   @map("message_id")
  userId     String   @map("user_id")
  emoji      String
  createdAt  DateTime @default(now()) @map("created_at")
  deletedAt  DateTime? @map("deleted_at")

  // Relations
  message    ChatMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId, emoji])
  @@map("message_reactions")
}

model MessageReply {
  id            String   @id @default(uuid())
  messageId     String   @map("message_id")
  replyToId     String?  @map("reply_to_id")
  userId        String   @map("user_id")
  text          String?
  createdAt     DateTime @default(now()) @map("created_at")
  deletedAt     DateTime? @map("deleted_at")

  // Relations
  message       ChatMessage @relation("MessageReplies", fields: [messageId], references: [id], onDelete: Cascade)
  replyTo       ChatMessage? @relation("ParentMessageReply", fields: [replyToId], references: [id], onDelete: SetNull)
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("message_replies")
}

model MessageUserStatus {
  id         String   @id @default(uuid())
  messageId  String   @map("message_id")
  userId     String   @map("user_id")
  receivedAt DateTime? @map("received_at")
  seenAt     DateTime? @map("seen_at")

  // Relations
  message    ChatMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade, map: "message_user_status_user_id_fkey")
  // chatUser relation removed because userId in ChatUser is not unique

  @@unique([messageId, userId])
  @@map("message_user_status")
}

model ChatBlock {
  id         String   @id @default(uuid())
  chatId     String?  @map("chat_id")
  createdAt  DateTime @default(now()) @map("created_at")
  deletedAt  DateTime? @map("deleted_at")

  // Relations
  userId     String   @map("user_id")
  user       User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  chat       Chat?  @relation(fields: [chatId], references: [id], onDelete: SetNull)

  @@map("chat_blocks")
}

enum ChatType {
  PRIVATE
  GROUP
}

enum ChatUserRole {
  ADMIN
  MEMBER
}

enum MessageType {
  TEXT
  IMAGE
  VIDEO
  FILE
}

enum MessageStatus {
  SENT
  FAILED
}

