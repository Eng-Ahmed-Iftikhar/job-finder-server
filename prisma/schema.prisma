generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id              String    @id @default(cuid())
  password        String?   // Made optional for social login users
  isActive        Boolean   @default(true)
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  verificationCodes VerificationCode[]
  profile         Profile?
  emailId         String? @unique
  email           Email?    @relation(fields: [emailId], references: [id], onDelete: SetNull)

  @@map("users")
}

// Email addresses associated with a user
model Email {
  id        String   @id @default(cuid())
  email     String   @unique
  isVerified Boolean  @default(false)
  // Social login fields
  provider  SocialProvider?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User?
  @@map("emails")
}

// Verification codes table
model VerificationCode {
  id        String              @id @default(cuid())
  userId    String
  code      String
  type      VerificationCodeType
  expiresAt DateTime
  isUsed    Boolean             @default(false)
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("verification_codes")
}

// Profile model for user details
model Profile {
  id              String   @id @default(cuid())
  userId          String   @unique
  firstName       String?
  lastName        String?
  isOnboarded     Boolean  @default(false)
  role            UserRole @default(USER)
  city            String?
  state           String?
  country         String?
  address         String?
  pictureUrl      String?
  bio             String? // profile bio
  resumeUrl       String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  phoneNumbers UserPhoneNumber[]
  experiences Experience[]
  educations Education[]
  profileSkills ProfileSkill[]
  notificationSettings NotificationSetting?

  @@map("profiles")
}

// Experience model
model Experience {
  id          String   @id @default(cuid())
  profileId   String
  position    String
  company     String
  startDate   DateTime
  endDate     DateTime?
  isCurrent   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("experiences")
}

// Education model
model Education {
  id            String   @id @default(cuid())
  profileId     String
  school        String
  degree        String
  fieldOfStudy  String?
  yearStarted   Int
  yearGraduated Int?
  inProgress    Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("educations")
}

// Skill model (now independent)
model Skill {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  profileSkills ProfileSkill[]

  @@map("skills")
}

// Profile-Skill join table (many-to-many)
model ProfileSkill {
  id        String   @id @default(cuid())
  profileId String
  skillId   String
  createdAt DateTime @default(now())

  // Relations
  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  skill   Skill   @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@unique([profileId, skillId])
  @@map("profile_skills")
}

// Phone numbers directory (no direct link to Profile)
model PhoneNumber {
  id          String   @id @default(cuid())
  countryCode String
  number      String
  isVerified  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  userPhoneNumbers UserPhoneNumber[]

  @@map("phone_numbers")
}

// Join table linking Profile to PhoneNumber
model UserPhoneNumber {
  id            String      @id @default(cuid())
  profileId     String
  phoneNumberId String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  profile     Profile     @relation(fields: [profileId], references: [id], onDelete: Cascade)
  phoneNumber PhoneNumber @relation(fields: [phoneNumberId], references: [id], onDelete: Cascade)

  @@unique([profileId, phoneNumberId])
  @@map("user_phone_numbers")
}

// Notification settings for user preferences
model NotificationSetting {
  id                                      String   @id @default(cuid())
  profileId                               String   @unique
  
  // Interview notifications
  jobInterviewScheduledSystem              Boolean  @default(true)
  jobInterviewScheduledEmail               Boolean  @default(true)
  
  // Connection request notifications
  connectionRequestSystem                  Boolean  @default(true)
  connectionRequestEmail                   Boolean  @default(true)
  
  // Job opening notifications
  newJobOpeningSystem                      Boolean  @default(true)
  newJobOpeningEmail                       Boolean  @default(true)
  
  // Interview reminder notifications
  interviewReminderSystem                  Boolean  @default(false)
  interviewReminderEmail                   Boolean  @default(true)
  
  createdAt                                DateTime @default(now())
  updatedAt                                DateTime @updatedAt

  // Relations
  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("notification_settings")
}

enum UserRole {
  USER
  ADMIN
  EMPLOYER
  CANDIDATE
}

enum VerificationCodeType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
  PHONE_VERIFICATION
}

enum SocialProvider {
  EMAIL
  GOOGLE
  FACEBOOK
  LINKEDIN
  GITHUB
}
